// Finance Tracker - Simple MVP Schema
// Phase 1: EXPENSE and INCOME only

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model
model User {
  id           String       @id @default(cuid())
  email        String       @unique
  password     String       // Hashed with bcrypt (random for OAuth users)

  // Profile information
  name         String
  firstName    String?
  lastName     String?
  profilePhoto String?      // URL to profile photo (future feature)

  // Auth provider tracking
  authProvider AuthProvider @default(EMAIL)
  googleId     String?      // Google user ID for OAuth users

  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  // Relations
  transactions          Transaction[]
  recurringTransactions RecurringTransaction[]
  favoriteCategories    FavoriteCategory[]

  @@map("users")
}

// Favorite categories for quick access
model FavoriteCategory {
  id        String          @id @default(cuid())
  userId    String
  category  String
  emoji     String
  type      TransactionType // EXPENSE or INCOME
  order     Int             @default(0) // Display order
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, category, type])
  @@index([userId, type, order])
  @@map("favorite_categories")
}

// Simple transaction model - EXPENSE or INCOME
model Transaction {
  id          String          @id @default(cuid())
  userId      String

  // Core fields
  amount      Decimal         @db.Decimal(10, 2)
  type        TransactionType // EXPENSE or INCOME
  category    String          // "Coffee", "Groceries", "Salary", etc.
  description String?

  // Metadata
  date        DateTime        @default(now())
  source      DataSource      @default(MANUAL)

  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  // Relations
  user        User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, date])
  @@index([userId, type])
  @@index([userId, category])
  @@map("transactions")
}

// Enums
enum TransactionType {
  EXPENSE  // Spending money
  INCOME   // Earning money
}

enum DataSource {
  MANUAL       // User typed it in
  EMAIL        // Parsed from email (Phase 3)
  OCR          // Scanned receipt (Phase 3)
  VOICE        // Voice input (Phase 3)
}

enum AuthProvider {
  EMAIL        // Email/password authentication
  GOOGLE       // Google OAuth
  LINKED       // Account has both email/password and Google linked
}

// Recurring transaction template
model RecurringTransaction {
  id          String          @id @default(cuid())
  userId      String

  // Core fields
  amount      Decimal         @db.Decimal(10, 2)
  type        TransactionType
  category    String
  description String?

  // Recurrence settings
  frequency   Frequency       // DAILY, WEEKLY, MONTHLY, YEARLY
  interval    Int             @default(1) // Every X days/weeks/months
  startDate   DateTime
  endDate     DateTime?       // Optional end date
  nextRun     DateTime        // Next time to create transaction
  isActive    Boolean         @default(true)

  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  // Relations
  user        User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, isActive, nextRun])
  @@map("recurring_transactions")
}

enum Frequency {
  DAILY
  WEEKLY
  MONTHLY
  YEARLY
}
